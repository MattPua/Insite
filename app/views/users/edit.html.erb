<%= stylesheet_link_tag "edit_user", :media => "all" %>
<%= javascript_include_tag "field_validation" %>
<%= javascript_include_tag "edit_user" %>

<!-- Title -->
<div  class="row" style="width:100%">
  <div class = "col-md-1"></div>
    <div class = "col-md-10" >
        <h1 style="font-size: 0px;"> Edit Profile  </h1>
    </div>
    <div class = "col-md-1"></div>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation" class="center" style="text-align:center; ">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul style="margin-bottom: 30px; list-style:none;">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="content row">
  <!-- add span 1 as placeholder -->
  <div class = "col-md-3"></div>
  
  <div class = "col-md-6">
    <div id="edit-user-form" class="center">
        <div id="edit-user-background" class="shadow"></div>
        <div id="edit-user-content">
          <!-- title -->
          <div class="center" style="text-align:center;" >
            <div><h1 style="font-size: 30px;"> User Profile  </h1></div>
          </div>

          <%= form_for(@user) do |f| %>
            <div class="form-group row">
              <label class="col-xs-4 control-label">Full Name</label>
              <div class="col-xs-8">
                <%= f.text_field :name, class:"form-control", placeholder:"Full Name" %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-xs-4 control-label">Email</label>
              <div class="col-xs-8">
                <%= f.email_field :email, class:"form-control", placeholder:"UTOR email address" %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-xs-4 control-label">Graduating Year</label>
              <div class="col-xs-8">
                <%= f.number_field :year, class:"form-control", placeholder:"Graduating Year", min:"1950", max:"2025" %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-xs-4 control-label">Faculty</label>
              <div class="col-xs-8">
                <%= f.text_field :faculty, class:"form-control", placeholder:"Faculty" %>
              </div>
            </div>
            <!-- take program out, we dont have that yet -->
            <div class="form-group row">
              <label class="col-xs-4 control-label">Phone</label>
              <div class="col-xs-8">
                <%= f.telephone_field :phone , class:"form-control", placeholder:"Phone Number (Optional)"%>
              </div>
            </div>  
            <div class=" form-group">
              <%= f.submit "Submit", class:"btn btn-lg btn-warning pull-right btn-submit", id:"btn-user-edit"%>

            </div>

            <!-- <div><%= f.submit "Submit" %></div> -->
          <% end %>
        </div>
      </div>
    </div>
  <div class = "col-md-3"></div>
</div>
