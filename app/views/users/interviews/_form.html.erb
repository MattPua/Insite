<%= form_for [current_user,@interview] do |f| %>
    <% if @interview.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h2>

      <ul>
      <% @interview.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Company Name" %>
    <%= f.text_field :company_name%> 
  </div>
    <div class="field">
    <%= f.label "Company Industry"%>
    <input type="text" size="30" id="company_industry" name="company[industry]"> 
  </div>
  <div class="field">
    <%= f.label "Position"%>
    <%= f.text_field :position %>


  </div>


  <div class="field" %>
    <%= f.label "Type"%>
    <%= f.select(:interview_type, [["Summer"],["PEY"],["Full Time"]]) %>
  </div>
  <div class="field">
    <%= f.label "When is your Interview?"%>

    <%= f.text_field :date, :value=>@interview.company_name.nil? ? "" : @interview.get_date , :class=>"datepicker"%>
   
  </div>
  <div class="field">
    <%= f.label "Status of Interview?"%>
    
    <%= f.select(:status, [["In Progress"],["Finished"]])%>
    
  </div>
  <div class="actions interview" style="margin: 2% 0 1% 0;">
  <%= f.submit "#{params[:action]=="edit" ? "Save Changes" : "Save Interview"}", id:"btn-submit-interview", class:"btn btn-warning float_l border_radius7"%>
  </div>
<% end %>
