<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
			<div class="row">
				<% if !@next_interviews.empty? %>	<!-- Smaller headings when user does have interviews upcoming -->
					<div class="text-center col-md-12 col-sm-12">
						<h1> Need some Interview Help?</h1>
						<small> Find the right people to help you!</small>
					</div>
					<div class="col-md-offset-3 col-sm-offset-3 col-md-6 col-sm-6 text-center">
						<div class="row">
							<div class="col-md-6">
								<p>Search for Users, companies or positions</p>
							</div>
							<div class="col-md-6">
				             	<%= form_tag search_path, method: :get do %>
					                <%= text_field_tag :user_search, ''    %>
					                <%= submit_tag "Search", :name => nil %>
				            	<% end %>
			            	</div>
		            	</div>
					</div>
				<% else %>	<!-- Larger heading when user doesn't have upcoming interviews -->
					<div class="text-center col-md-12 col-sm-12 col-xs-12 jumbotron">
						<h1> Need some Interview Help? </h1>
						<h3> Find people you want to talk to by searching for companies, positions, programs and more! </h3>
						<div class="row">
							<div class="col-md-12 col-sm-12 col-xs-12">
								<div class="row">
									<div class=" col-md-6 col-sm-6 col-xs-6 text-right">
									
									</div>
									<div class="col-md-6 col-sm-6 col-xs-6 text-left">
									
									</div>
								</div>
								<div class="row">
									<div class="col-md-6 col-sm-6 col-xs-6 text-right">
									List a New Interview!
									</div>
									<div class="col-md-6 col-sm-6 col-xs-6 text-left">
									<%= link_to "Setup Interview", new_user_interview_path(current_user), :class=>"btn btn-default btn-lg" %>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			<div class="row">	
				<div class="container-fluid">
					<% if !@next_interviews.empty? %> <!-- For the upcoming interviews-->
						<% @next_interviews.each do |interview| %>
							<div class="col-md-4 col-sm-4 upcoming-interview">
								<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 border2">
									<div class="row main-interview-info">
										<div class="container-fluid border2 next-info">
											<div class="row title">
												<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 text-center">
													<h3 id="upcoming-title"> Upcoming Interview </h3>
												</div>
											</div>
											<div class="row days-left">
												<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 border2 text-center" style="margin-bottom:10px;">
													<h4 class="upcoming-day" date="<%=interview.get_date%>">  </h4>
												</div>
											</div>
											<div class="row time" style="margin-bottom:10px;">
												<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 border2 text-center">
													<h4> <%= interview.interview_type %> </h4>
												</div>
											</div>
										</div>
									</div>
									<div class="row interview-info">
										<div class="container-fluid interview-container">
											<div class="row ">
												<div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 ">
												Company
												</div>
												<div class="col-md-6 col-sm-6">
												<%= interview.company_name %>
												</div>

												<div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1">
												Position
												</div>
												<div class="col-md-6 col-sm-6">
												<%= interview.position %>
												</div>

												<div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1">
												Date
												</div>
												<div class="col-md-6 col-sm-6">
												<%= interview.get_date %>
												</div>

												<div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1">
												Type
												</div>
												<div class="col-md-6 col-sm-6">
												<%= interview.interview_type %>
												</div>											

											</div>
										</div>
									</div>
									<div class="row text-center upcoming-interview-buttons">
										<div class="container-fluid">
											<div class="col-md-6 col-sm-6">
												<button type="button" class="btn btn-success"> Find Help </button>
											</div>

											<div class="col-md-6 col-sm-6">
												<a href="<%= edit_user_interview_path(current_user,interview)%>"><button type="button" class="btn btn-warning"> Edit </button> </a>
											</div>
										</div>
									</div>						
								</div>
							</div>
						<% end %>
					<% else %> <!-- If user doesn't have upcoming interviews -->
					<% end %>
				</div>
			</div>
			<div class="row random-interview-title"> <!-- For the randomly selected interviews, shows whether or not user has upcoming interviews or not-->
				<div class="container-fluid text-center well ">
					<h3> Check out some interviews your peers currently have!</h3>
				</div>
				<div class="container-fluid">
					<% @random_interviews.each do |interview| %>
						<div class="col-md-4 col-sm-4">
							<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 border2 random-interview-container">
								<div class="row">
									<div class="container-fluid random-interview">
										<div class="row ">
											<div class="col-md-12 col-sm-12 text-center">
												<h4><%= interview.company_name %></h4>
											</div>

											<div class="col-md-12 col-sm-12 text-center">
												<h4><%= interview.position %></h4>
											</div>

											<div class="col-md-12 col-sm-12 text-center">
												<h4><%= interview.interview_type %></h4>
											</div>											
										</div>
									</div>
								</div>		
							</div>
						</div>
					<% end %>					
				</div>
			</div>
		</div>
	</div>
</div>