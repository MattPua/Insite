<div class="content">
	<!-- Error Checking Message -->
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	<% if @user.errors.any? %>
		<div  class="row" style="width:100%">
			<div class = "col-md-2"></div>
			<div class = "col-md-8 alert alert-danger">
				<b><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved</b>
			</div>
			<div class = "col-md-2"></div>
		</div>
		<% @user.errors.full_messages.each do |msg| %>
			<div  class="row" style="width:100%">
				<div class = "col-md-2"></div>
				<div class="col-md-8 alert alert-danger">
					<%= msg %>
				</div>
				<div class = "col-md-2"></div>
			</div>
		<% end %>
	<% end %>

	<!-- title -->
	<div class="row" style="width:100%">
		<div class = "col-md-3"></div>
		<div class = "col-md-6" style="padding: 10px 25px;"><h1 style="font-size: 30px;"> Sign In  </h1></div>
		<div class = "col-md-3"></div>
	</div>


	<div id="login-form-content" class="row">
	    <div class = "col-md-3"></div>
        <div class = "register-form col-md-6">
            <div class="form-group">
                <%= f.email_field :email, :autofocus => true, class:"form-control input-lg", placeholder:"Your UTOR email address" %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, class:"form-control input-lg", placeholder:"Password"%>
            </div>
            <div class=" form-group row">
                <div class="col-md-6">
                    <%= render "devise/shared/links" %>
                </div>
                <div class="col-md-6">
                    <% if devise_mapping.rememberable? -%>
                    <div>
                        <%= f.check_box :remember_me, :class=>"pull-right" %>
                        <%= f.label :remember_me, :class=>"pull-right", :style => "margin-right: 10px;" %>
                    </div>
                    <% end %>
                </div>
            </div>
            <form>
                <div class=" form-group">
                    <%= f.submit "Log In", class:"btn btn-lg btn-warning pull-right"%>
                </div>
            </form>
        </div>
    	<div class = "col-md-3"></div>
    </div>
    <% end %>
</div>

<div id="footer">
    <div id="company-logo" class="pull-right" style="margin-right: 10px;">
        <%= image_tag("YNCN-boxes-text.png") %>
    </div>
</div>



<style type="text/css">
    .register-form{
		padding: 10px 50px;
	}
	.content{
		background: #f3faf5;
	}
	#login-form-content
	{
		width: 100%;
		padding-bottom: 100px;
	}
	#footer{
        height: 100px;
        width: 100%;
        padding: 20px;
   }
            
   #footer img{
width: 200px;
   }

</style>