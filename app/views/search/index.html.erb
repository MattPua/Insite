<div class="content">
    <div style="margin:0 auto; width:50%; text-align:center;">
        <h1>Search Result</h1>
    </div>
    <div id ="result">
    <div id="wrapper">
        <% if @users.present? %>
            <% @users.each do |user| %>
            <div class="profile">
                <%= gravatar_for(user) %>
                <h3 class="name">
                    <%= user.name %>
                </h3>
                <h4 class="position">
                    <%= user.email %>
                 </h4>
            </div>
            <% end %>
        <% end %>
        <% if @companies.present? %>
            <% @companies.each do |company| %>
                        <div class="profile">
                <h3 class="name">
                    <%= company.name %>
                </h3>
                <h4 class="position">
                    <%= company.industry %>
                 </h4>
            </div>
            <% end %>
        <% end %>
        <% if @interviews.present? %>
            <% @interviews.each do |interview| %>
                <div class="profile">
                <h3 class="name">
                    <%= interview.company_name %>
                </h3>
                <h4 class="position">
                    <%= interview.position %>
                 </h4>
            </div>
        <% end %>
            <% end %>

    </div>
    </div>

</div>


