<div style="margin:0 auto; width:100%;">
    <ul>
        <% @users.each do |user| %>
        <li style="border: 3px solid black;  height:200px; width:200px;float:left; list-style:none;overflow:hidden">
            
                
                <%= gravatar_for user %>
             
                <%= user.name %>
                <%= user.email %>
                <%= user.year %>
                <%= user.program %>
                <%= user.faculty %>
                <%= user.phone %>
                <%= user.registerterms %>

                <%= link_to 'Show', user %>
                <% if can? :update, @user %>
                    <%= link_to 'Edit', edit_user_path(user) %>
                    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
           

            <% end %>
           
        </li>
    </ul>
</div>

