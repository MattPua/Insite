<!-- register to banner -->
<%= render 'layouts/shared/registerHeader' %>
 
<div class = "content">
	
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<!-- User Form -->
		<% if @user.errors.any? %>
			<div id="error_explanation">
				<h1><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h1>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div  class="row">
		<div class = "col-md-1"></div>
		<div class = "col-md-10" style="padding: 10px 50px;"><h1 style="font-size: 30px;"> Registration  </h1></div>
		<div class = "col-md-1"></div>
		</div>
		
		<div id="register-form" class="row">
		<!-- add span 1 as placeholder -->
		<div class = "col-md-1"></div>
		<div class = "register-form col-md-5">          
				<div class="form-group">
					<%= f.email_field :email, :autofocus => true, class:"form-control input-lg", placeholder:"Your UTOR email address" %>
				</div>
				<div class="form-group">
					<%= f.password_field :password, class:"form-control input-lg", placeholder:"Password"%>
				</div>
				<div class="form-group">
					<%= f.password_field :password_confirmation, class:"form-control input-lg", placeholder:"Confirm Password"%>
				</div>
				<div class="form-group">
					<%= f.check_box :registerterms %> I Agree To The Terms & Conditions<br />
				</div>
			<div>
		</div>
		</div>
		<div class = "register-form col-md-5">
				<div class="form-group">
					<%= f.text_field :name, class:"form-control input-lg", placeholder:"Full Name"%>
				</div>
				<div class="form-group">
					<%= f.number_field :year, class:"form-control input-lg", placeholder:"Graduating  Year"%>
				</div>
				<div class="form-group">
					<%= f.text_field :faculty, class:"form-control input-lg", placeholder:"Faculty"%>
				</div>
				<div class="form-group">
					<%= f.number_field :phone , class:"form-control input-lg", placeholder:"Phone Number (Optional)"%>
				</div>
			</div>			
		<!-- add span 1 as place holder -->
		<div class = "col-md-1"></div>
		</div>
		<form>
		<div style="width:100%; text-align: center;">
			<button type="submit" class="btn btn-lg btn-warning">Sign Up</button>
			</div>
			<!-- <div><%= f.submit "Sign up" %></div> -->
		</form>
		</div>
				
	<% end %>
 </div>
  
<!-- <%= render "devise/shared/links" %> -->

<style type="text/css">
	.register-form{
		padding: 10px 50px;
	}
	
	.content{
	background-color: #f3faf5;
	height: 600px;
	}
	
	#register-form
	{
		height: 260px;
	}

</style>

