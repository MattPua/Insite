<%= stylesheet_link_tag "header", :media => "all" %>

<div id="header">
    <!-- for transparent header background -->
    <% if (params[:controller]=="home" && params[:action]=="index")%>
    <div id="header-background" ></div>
    <% end %> 
    
    <div style="position: absolute; width: 100%; height: 60px; margin:0; 
        <%= "background: #8ba987;" unless (params[:controller]=="home" && params[:action]=="index")%>">

        <div id="logo" class="pull-left" style="margin-top: -7px; margin-left: 10px; height: 60px;">
            <%= link_to (image_tag("insite-logo.png")),root_path %>
        </div>

        <!-- search bar -->
        <!--
        <% if user_signed_in? %>
            <span style=" text-align:center; ">
                <%= form_tag users_path, style:"margin:3% auto; width:20%;", method: :get do %>
                <%= text_field_tag :search, ''    %>
                <%= submit_tag "Search", :name => nil %>
                <% end %>
            <span>
        <% end %>
        -->

        <div id="nav" class="pull-right" style="margin-top:10px; margin-right: 30px; height: 100%; ">
            <% if !user_signed_in? %>
			    <%= link_to "Log In", new_user_session_path, class:"btn btn-default"%>
                <%= link_to "Sign Up", new_user_registration_path , class:"btn btn-warning"%>
            <% else %>
                <div class="dropdown">
                    <a class="btn btn-default" data-toggle="dropdown" data-target="#" srole="button">
                        <div id="user-name" class="clip">
                            <%= "#{current_user.name.titleize}" %>
                        </div>
                        <div>
                              â–¼
                        </div>
                    </a>
                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dLabel">
                        <li role="presentation"> 
                            <%= link_to user_path(current_user), :tabindex=>"-1" do %>
                                <span class="glyphicon glyphicon-user"></span>
                                Your Profile
                            <% end %>
                        </li>
                        <li role="presentation"> 
                            <%= link_to interviews_path(current_user), :role=>"menuitem", :tabindex=>"-1" do %>
                                <span class="glyphicon glyphicon-book"></span> Your Interviews
                            <% end %>
                        </li> 
                        <li role="presentation"> 
                            <%= link_to destroy_user_session_path , method: :delete, :role=>"menuitem", :tabindex=>"-1" do %>
                                <span class="glyphicon glyphicon-off"></span> Log Out
                            <% end %>
                        </li> 
                    </ul>
                </div>  
            <% end %>
        </div>
    </div>
</div>

