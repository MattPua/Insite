<%= stylesheet_link_tag "user_main", :media => "all" %>
<div class = "content" style="padding:0; padding-top:20px;">
	<div style = "width: 400px;">
		<% if @user.has_active_interview? %>
			<!-- user upcoming interview -->
			<div id = "upcoming-interview">
				<div>
					<h1> Upcoming </h1>
				</div>
				<div class = "company-img">
				</div>
				<div class = "interview-details">
					<div class = "company-info">
						<h2> 
							<span class="glyphicon glyphicon-briefcase"></span>
							&nbsp; Company Information 
						</h2>
						<p>
							Name: <%= "#{@user.next_interview.company_name}" %>
						</p>
						
					</div>
					<div class = "interview-info">
						<h2> 
							<span class="glyphicon glyphicon-pencil"></span>
							&nbsp; Interview Information 
						</h2>
						<p>
							<!-- TODO: add link to google map -->
							<!-- Add company location -->
							Position: <%= "#{@user.next_interview.position}" %>
						</p>
						<p>
							Date: <%= "#{@user.next_interview.get_date}" %>
						</p>			
					</div>
					<div class = "interview-edit">
							<button type="button" class="btn btn-default pull-right">Edit</button>
							<button type="button" class="btn btn-warning">Create New</button>
					</div>
				</div>
			</div>
		<% else %>
			<div id = "new-interview" class = "shadow">
				<!-- create new interview form -->
				<h1>
					<span class="glyphicon glyphicon-calendar"></span>
					 New Interview
				</h1>
				<%= form_for @interview, :url => "/users/#{@current_user.id}/interviews",
					:html => {:method => :post} do |f| %>
					<div class="form-inputs">
						<div class="form-group">
							<%= f.text_field :company_name, :class=>"form-control input-lg",
							 :placeholder=>"Company Name" %>
						</div>
						<div class="form-group">
							<%= f.text_field :position, :class=>"form-control input-lg",
							 :placeholder=>"Position"%>
						</div>
						<%= f.hidden_field :user_id, :value => current_user.id %> 
						<%= f.hidden_field :company_id %> 
						<div class="form-group">
							<h2>Interview Time: </h2>
							<%= f.datetime_select :date, :start_year=>2010, :end_year=>2050,
								:prompt=>true, :use_month_numbers=>false, :with_css_classes=>true,
								:date_separator=>"", :discard_day=>false, :include_blank=>false %>
						</div>
					</div>

					<div class="form-actions">
						<%= f.button :submit, :class=>"pull-right btn btn-default"%>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class = "contacts">
		<!-- past interns should go here -->
		<% if !@relevant_users.nil? %>
			<% @relevant_users.each do |user| %>
				<div class="profile">
					<%= gravatar_for(user) %>
					<h3 class="name">
						<%= user.name %>
					</h3>
					<h4 class="position">
						<%= user.email %>
					</h4>
					<h4 class="interview">
					<%= "Next interview is at #{user.next_interview.company_name}" if user.has_active_interview? %>

					</h4>
					<!-- DO NOT HAVE LOCATION ENTITY -->
				</div>
			<% end %>
		<% end %>
	</div>
</div>
