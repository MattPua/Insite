<div style="display:none;" id="<%= form %>">
<h2> <%= title %> </h2>
  <%= simple_form_for(@interview) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      
      <%= f.hidden_field :company_name, :value=>@company.name%> 

      <%= f.input :position %>
      <%= f.hidden_field :status, :value=>interview_status%>
      
      <%= f.hidden_field :user_id, :value => current_user.id %> 
      <!-- Use above to send value into newly created object by default. -->
      <%= f.hidden_field :company_id %> 
      <b> When did you <%= time %> here?</b>
      <br/>
      <%= datetime_select("interview", "date", start_year: 2010, end_year:2050, prompt: true, use_month_numbers: false, :discard_hour=>true, with_css_classes: true,
                                    discard_day: true, include_blank: false) %>
      <!-- Need to make this a way for users to enter their time for their interview -->

    </div>

    <div class="form-actions">
      <%= f.button :submit, :value=>"Create history" %>

    </div>
  <% end %>
</div>
