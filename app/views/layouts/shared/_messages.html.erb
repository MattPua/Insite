<div id="flash_messages" class="text-center centered">
	<% flash.each do |name, msg| %>
	  <% if msg.is_a?(String) %>

	    <!-- <%= content_tag :div, msg, :id => "flash_#{name}" ,:class=>"alert-dismissable"%> -->
	   
	    <div id="flash_<%=name%>" class="alert-dismissable alert-info">
	    	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	    	<%= msg %>
	    	
	    </div>
	  <% end %>
	<% end %>
</div>